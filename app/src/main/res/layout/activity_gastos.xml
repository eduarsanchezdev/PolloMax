<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".GastosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConfiguraciÃ³n de Precios de Alimento"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Bulto Purina Crecimiento"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etPrecioBultoCrecimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ej: 85000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Bulto Purina Engorde"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etPrecioBultoEngorde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ej: 78000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Se asume que cada bulto contiene 40 kg."
            android:textSize="12sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnCalcularGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Gasto"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:id="@+id/layoutResultadosGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvGastoTituloCorral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Gasto para: Corral 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvPrecioPromedioKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Precio Promedio por Kilo de : $2,037.5"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvConsumoTotalCorral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Consumo Total del Corral: 55.0 kg"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvGastoTotalAlimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Gasto Total en Alimento: $112,062.5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_primary"/>
            
             <Button
                android:id="@+id/btnGuardarPrecios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Precios"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>